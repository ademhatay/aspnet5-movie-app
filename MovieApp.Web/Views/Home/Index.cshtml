@model HomePageViewModel

@section header {
@await Html.PartialAsync("_header")
}

<h1>Movie List</h1>
<div id="filmler">
    @if (Model.PopularMovies.Count() > 0)
    {
        <div class="row">
            @foreach (var movie in Model.PopularMovies)
            {
                @await Html.PartialAsync("_movie", movie)
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">No movies found.</div>
    }
</div>
