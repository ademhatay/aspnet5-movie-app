@model Movie 

<h1>Create Movie</h1>
<hr />
<form method="post" asp-controller="Movies" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" name="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input class="form-control" asp-for="Director" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" asp-for="ImageUrl" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId"></label>
<select class="form-control" asp-for="GenreId" asp-items="ViewBag.Genres"></select>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
</form>