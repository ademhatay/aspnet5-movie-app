@model Movie

<div class="card">
    <div class="row">
        <div class="col-md-3">
            <img class="img-fluid" src="/img//@Model.ImageUrl" alt="@Model.Title" />
        </div>
        <div class="col-md-9">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
</div>