@model Movie

<h1>Edit Movie</h1>
<hr />
<form method="post" asp-controller="Movies" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" asp-for="Title" name="Title" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"> @Model.Description</textarea>
    </div>
    <div class="form-group">
        <label asp-for="Director"></label>
        <input class="form-control" asp-for="Director" value="@Model.Director" />
    </div>
    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input class="form-control" asp-for="ImageUrl" value="@Model.ImageUrl" />
    </div>
    <div class="form-group">
        <label asp-for="GenreId"></label>
        <input class="form-control" asp-for="GenreId" value="@Model.GenreId" />
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
</form>