@model Movie


<div class="card mb-3 w-100">
    <div class="row">
        <div class="col-md-3">
            <img class="img-fluid"  src="/img/@Model.ImageUrl" alt="@Model.Title" />
        </div>
        <div class="col-md-9">
            <div class="card-body p-0">
                <h5 class="card-title">@Model.Title</h5>
                <p>
                    <a class="btn btn-primary" href="/movies/details/@Model.MovieId">Details</a>
                </p>
            </div>
        </div>
    </div>
</div>
